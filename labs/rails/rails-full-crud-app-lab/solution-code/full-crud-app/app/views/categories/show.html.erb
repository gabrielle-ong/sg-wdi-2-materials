<h1><%= @category.name %></h1>
<p id="notice"><%= notice %></p>


<table class="table table-bordered table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Author</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= truncate book.summary, length: 200 %></td>
        <td><%= link_to(book.author.full_name, book.author) rescue nil %></td>
        <td><%= book.categories.map(&:name).to_sentence rescue nil %></td>
        <td><%= link_to 'Show', book, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
